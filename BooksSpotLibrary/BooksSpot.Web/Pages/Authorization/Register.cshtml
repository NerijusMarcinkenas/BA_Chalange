@page
@model BooksSpot.Web.Pages.Authorization.RegisterModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h2 class="mb-3">Register</h2>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger">
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="RegisterDto.Name">Name</label>    
                    <input type="text" asp-for="RegisterDto.Name" class="form-control" />
                    <span asp-validation-for="RegisterDto.Name"></span>
                </div>
                 <div class="mb-3">
                    <label class="form-label" asp-for="RegisterDto.Username">Username</label>    
                    <input type="text" asp-for="RegisterDto.Username" class="form-control" />
                    <span asp-validation-for="RegisterDto.Username"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="RegisterDto.Email">Email Address</label>
                    <input type="text" asp-for="RegisterDto.Email" class="form-control" />
                    <span asp-validation-for="RegisterDto.Email"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="RegisterDto.Password">Password</label>
                    <input type="password" asp-for="RegisterDto.Password" class="form-control" />
                    <span asp-validation-for="RegisterDto.Password"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="RegisterDto.ConfirmPassword">Confirm Password</label>
                    <input type="password" asp-for="RegisterDto.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="RegisterDto.ConfirmPassword"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>